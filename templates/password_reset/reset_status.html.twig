{% extends 'base_empty.html.twig' %}

{% block head %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block title %}
    {{ 'password_reset.status_title'|trans }}
{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-blue-200 p-4">
    <div class="w-full max-w-sm sm:max-w-md md:max-w-lg bg-white rounded-lg shadow-lg p-4 sm:p-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-blue-600 mb-4 sm:mb-6 text-center">
            {{ 'password_reset.status_title'|trans }}
        </h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-3 sm:p-4 mb-3 sm:mb-4 rounded-lg text-white text-sm sm:text-base {{ label == 'success' ? 'bg-green-500' : (label == 'error' ? 'bg-red-500' : 'bg-yellow-500') }}">
                    <p>{{ message }}</p>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    setTimeout(function() {
        window.location.href = "{{ path('app_login') }}";
    }, 5000);

    // Disable back button
    history.pushState(null, null, document.URL);
    window.addEventListener('popstate', function () {
        history.pushState(null, null, document.URL);
    });
</script>
{% endblock %}