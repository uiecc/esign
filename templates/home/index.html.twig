.hero-section {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.hero-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 50%;
  background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
  z-index: 1;
}

.hero-section .background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transform: scale(1) translate(0, 0%);
  transform-origin: 100% 90%; /* Adjust vertical position */
  transition: transform 0.3s ease-out;
}

@media (max-width: 640px) {
  .hero-section .background-image {
    transform: scale(2.5); /* Adjust zoom level for mobile */
    transform-origin: 50% 40%; /* Adjust vertical position for mobile */
  }
}
 @media (max-width: 640px) {
    .hero-section .left-flag,
    .hero-section .right-flag {
      top: 10%; /* Adjust for better positioning on mobile */
    }
 }

    /* Section transitions */
    section {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.5s ease-out, transform 0.5s ease-out;
    }

    section.visible {
        opacity: 1;
        transform: translateY(0);
    }

    /* FAQ dropdown styles */
    .faq-item {
        transition: all 0.3s ease-in-out;
    }

    .faq-answer {
        transition: max-height 0.3s ease-out, opacity 0.3s ease-out;
        max-height: 0;
        opacity: 0;
        overflow: hidden;
    }

    .faq-answer:not(.hidden) {
        max-height: 1000px;
        /* Adjust this value based on your content */
        opacity: 1;
    }

    .faq-item.active .faq-answer {
        max-height: 500px;
    }

    .truncate {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    /* Responsive adjustments */
    @media(max-width: 640px) {
        .hero-section {
            padding: 0.5rem 0.5rem;
        }

        .blurred-bg-container {
            display: none;
