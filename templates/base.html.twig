    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const optionsMenu = document.getElementById('options-menu');
            const dropdownMenu = document.getElementById('dropdown-menu');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            optionsMenu.addEventListener('click', () => {
                dropdownMenu.classList.toggle('hidden');
            });

            document.addEventListener('click', (event) => {
                if (!dropdownMenu.contains(event.target) && !optionsMenu.contains(event.target)) {
                    dropdownMenu.classList.add('hidden');
                }
            });
        });
    </script>

<div id="language-popup" class="fixed inset-0 z-50 items-center justify-center bg-black bg-opacity-50" style="display: none;">
  <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg p-6 max-w-sm sm:max-w-md w-full mx-4 sm:mx-0">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">{{ 'language_popup.title'|trans }}</h2>
      <button id="language-popup-close" class="text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">{{ 'language_popup.message'|trans }}</p>
    <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
      {{ 'language_popup.change_later'|trans }}
      <span class="inline-flex items-center">
        <img src="/icons/translation.svg" alt="Translation image" class="w-4 h-4 lg:w-7 lg:h-7 text-[#106496]">
        {{ 'language_popup.icon_description'|trans }}
      </span>
    </p>
    <div class="flex justify-end space-x-4">
      <button id="language-popup-english" class="bg-main-green text-white px-4 py-2 rounded-md hover:bg-green-600">
        {{ 'home_header.language.english'|trans }}
      </button>
      <button id="language-popup-french" class="bg-main-green text-white px-4 py-2 rounded-md hover:bg-green-600">
        {{ 'home_header.language.french'|trans }}
      </button>
    </div>
  </div>
</div>

<div id="language-indicator"></div>



<script>
document.addEventListener('DOMContentLoaded', function () {
    const languagePopup = document.getElementById('language-popup');
    const closeBtn = document.getElementById('language-popup-close');
    const englishBtn = document.getElementById('language-popup-english');
    const frenchBtn = document.getElementById('language-popup-french');
    const languageIndicator = document.getElementById('language-indicator');
    
    // Function to show the popup
    function showPopup() {
        languagePopup.style.display = 'flex';
        sessionStorage.setItem('hasSeenLanguagePopup', 'true');
        console.log("Displaying popup and setting sessionStorage.");
    }

    // Function to hide the popup
    function hidePopup() {
        languagePopup.style.display = 'none';
        console.log("Hiding popup.");
    }

    // Check if the popup has already been shown (use sessionStorage)
    const hasSeenPopup = sessionStorage.getItem('hasSeenLanguagePopup');
    console.log("Has seen popup:", hasSeenPopup);

    // Show the popup if it's the first time visiting this session
    if (hasSeenPopup !== 'true') {
        showPopup();
    } else {
        console.log("Popup already seen this session.");
        hidePopup();
    }

    // Close button event
    closeBtn.addEventListener('click', hidePopup);

    // English button event    
    englishBtn.addEventListener('click', function () {
        hidePopup();
        window.location.href = "{{ path('switch_language', {'locale': 'en'}) }}";
    });

    // French button event
    frenchBtn.addEventListener('click', function () {
        hidePopup();
        window.location.href = "{{ path('switch_language', {'locale': 'fr'}) }}";
    });

    // Display an indicator pointing to the language icon
    languageIndicator.innerHTML = `
      <div class="absolute right-0 mt-2 p-2 text-xs text-main-green">
        <p>Click on this icon <img src="/icons/translation.svg" class="inline w-6 h-6" alt="translation icon"> to change the language at any time!</p>
      </div>
    `;

    // Hide the indicator after a few seconds
    setTimeout(() => {
        languageIndicator.style.display = 'none';
    }, 3000); // Hide after 3 seconds
});

</script>
</body>
</html>