<div class="flex justify-center mt-4">
    <form method="post" 
          action="{{ path('app_student_delete', {'id': student.id}) }}" 
          onsubmit="return confirm('Are you sure you want to delete this item?');"
          class="w-full max-w-md">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ student.id) }}">
        <button class="w-full text-sm sm:text-base py-2 px-3 bg-main-green text-white font-semibold rounded hover:bg-opacity-90 transition-all">
            Delete
        </button>
    </form>
</div>