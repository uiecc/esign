{# templates/student/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvelle Inscription{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-5xl sm:mx-auto">
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <div class="max-w-4xl mx-auto">
                <div class="divide-y divide-gray-200">
                    <!-- En-tête -->
                    <div class="text-center pb-8">
                        <h1 class="text-2xl font-bold text-gray-900 mb-2">UIECC/ESIGN/SVE/BPA</h1>
                        <h2 class="text-xl text-gray-800">FICHE DE PRÉINSCRIPTION À L'ÉCOLE SUPÉRIEURE INTERNATIONALE DE GÉNIE NUMÉRIQUE (ESIGN)</h2>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'mt-8 space-y-8'}}) }}
                    
                    <!-- Section Administrative -->
                    <div class="bg-gray-50 p-6 rounded-lg">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Informations Administratives</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.academicYear, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.academicYear, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.academicYear, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                            <div>
                                {{ form_label(form.matricule, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.matricule, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.matricule, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                        </div>
                    </div>

                    <!-- Section Informations Personnelles -->
                    <div class="bg-gray-50 p-6 rounded-lg mt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Informations Personnelles</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="col-span-2">
                                {{ form_label(form.fullName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.fullName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.fullName, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                            
                            <div>
                                {{ form_label(form.birthDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.birthDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.birthDate, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                            
                            <div>
                                {{ form_label(form.birthPlace, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.birthPlace, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.birthPlace, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.gender, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.gender, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.gender, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.nationality, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.nationality, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.nationality, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.handicap, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.handicap, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.handicap, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                        </div>
                    </div>

                    <!-- Section Académique -->
                    <div class="bg-gray-50 p-6 rounded-lg mt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Informations Académiques</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.baccalaureat, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.baccalaureat, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.baccalaureat, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.filiere, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.filiere, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.filiere, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div class="col-span-2">
                                {{ form_label(form.language, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                <div class="mt-2 space-x-6">
                                    {{ form_widget(form.language, {'attr': {'class': 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300'}}) }}
                                </div>
                                {{ form_errors(form.language, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                        </div>
                    </div>

                    <!-- Section Contact -->
                    <div class="bg-gray-50 p-6 rounded-lg mt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Informations de Contact</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.parentName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.parentName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.parentName, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.parentPhone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.parentPhone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.parentPhone, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.motherName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.motherName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.motherName, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.motherPhone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.motherPhone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.motherPhone, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div class="col-span-2">
                                {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.address, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.address, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.phone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.phone, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                            </div>
                        </div>
                    </div>

                    <!-- Section Loisirs -->
                    <div class="bg-gray-50 p-6 rounded-lg mt-6">
                        <h3 class="text-lg font-medium text-gray-900 mb-4">Loisirs</h3>
                        <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                            {{ form_widget(form.activities, {'attr': {'class': 'space-y-2'}}) }}
                            {{ form_errors(form.activities, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                        </div>
                    </div>

                    <!-- Boutons d'action -->
                    <div class="flex justify-end space-x-4 pt-6">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                            Enregistrer
                        </button>
                    </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}